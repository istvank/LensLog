<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <!-- disable window title -->
        <item name="android:windowNoTitle">true</item>
        <!-- disable window actionbar, cause u have an toolbar -->
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:popupMenuStyle">@style/LensLog.PopupMenu</item>
    </style>

    <!--styling color for arrow-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!--styling for options menu-->
    <style name="LensLog.PopupMenu" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/primaryColor</item>
    </style>

</resources>